<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>View Characters</title>
    <link href="https://cdn.jsdelivr.net/npm/tailwindcss@2.2.19/dist/tailwind.min.css" rel="stylesheet">
</head>
<body class="bg-gray-800 text-white">
    <div class="container mx-auto">
        <h1 class="text-4xl font-bold text-center my-10">Characters</h1>
        <div id="characters-list" class="bg-gray-700 p-6 rounded-lg shadow-lg"></div>
    </div>
    <script>
        async function fetchCharacters() {
            const response = await fetch('/api/characters');
            const characters = await response.json();
            const list = document.getElementById('characters-list');
            list.innerHTML = characters.map(character => `
                <div class="mb-4 p-4 bg-gray-800 rounded-lg">
                    <h2 class="text-2xl font-bold">${character.name}</h2>
                    <p>Race: ${character.race}</p>
                    <p>Class: ${character.class}</p>
                    <p>Stats: ${character.stats}</p>
                    <p>Equipment: ${character.equipment}</p>
                    <p>Backstory: ${character.backstory}</p>
                </div>
            `).join('');
        }

        fetchCharacters();
    </script>
</body>
</html>
