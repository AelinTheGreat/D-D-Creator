<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>View Campaigns</title>
    <link href="https://cdn.jsdelivr.net/npm/tailwindcss@2.2.19/dist/tailwind.min.css" rel="stylesheet">
</head>
<body class="bg-gray-800 text-white">
    <div class="container mx-auto">
        <h1 class="text-4xl font-bold text-center my-10">Campaigns</h1>
        <div id="campaigns-list" class="bg-gray-700 p-6 rounded-lg shadow-lg"></div>
    </div>
    <script>
        async function fetchCampaigns() {
            const response = await fetch('/api/campaigns');
            const campaigns = await response.json();
            const list = document.getElementById('campaigns-list');
            list.innerHTML = campaigns.map(campaign => `
                <div class="mb-4 p-4 bg-gray-800 rounded-lg">
                    <h2 class="text-2xl font-bold">${campaign.title}</h2>
                    <p>${campaign.description}</p>
                </div>
            `).join('');
        }

        fetchCampaigns();
    </script>
</body>
</html>
